<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/registration.css" />
    <link rel="stylesheet" href="/css/output.css" />
  </head>
  <body>
    <section id="registration">
      <div class="container">
        <div id="content-holder" class="grid grid-rows-3 grid-flow-col">
          <div class="content-div row-span-3" id="reg-img"></div>
          <div class="content-div col-span-2" id="reg-input">
            <div class="grid grid-rows-5 grid-flow-col gap-4">
              <div id="user-select-div" class="grid-cols-subgrid col-span-2">
                <div>
                  <label for="user-type">User Type</label>
                  <select
                    name="user-type"
                    id="user"
                    class="border-neutral-300 border-2"
                  >
                    <option value="seller" id="seller">Seller</option>
                    <option value="bidder" id="bidder">Bidder</option>
                  </select>
                </div>
              </div>
              <div id="first-name-div">
                <label for="first-name">First name</label>
                <input
                  type="text"
                  name="first-name"
                  id="first-name"
                  class="border-neutral-300 border-2"
                  placeholder="Enter first name"
                />
              </div>
              <div id="last-name-div">
                <label for="last-name">Last name</label>
                <input
                  type="text"
                  name="last-name"
                  id="last-name"
                  class="border-neutral-300 border-2"
                  placeholder="Enter last name"
                />
              </div>
              <div id="dob-div">
                <label for="dob">Date of birth</label>
                <input
                  type="date"
                  name="dob"
                  id="dob"
                  class="border-neutral-300 border-2"
                />
              </div>
              <div id="email-div">
                <label for="email">Email</label>
                <input
                  type="text"
                  name="email"
                  id="email"
                  class="border-neutral-300 border-2"
                  placeholder="Enter email"
                />
              </div>
              <div id="address1-div">
                <label for="address1">Address</label>
                <input
                  type="text"
                  name="address1"
                  id="address1"
                  class="border-neutral-300 border-2"
                  placeholder="Enter address1"
                />
              </div>
              <div id="address2-div">
                <label for="address2">Address</label>
                <input
                  type="text"
                  name="address2"
                  id="address2"
                  class="border-neutral-300 border-2"
                  placeholder="Enter address2"
                />
              </div>
              <div id="city-div">
                <label for="city">City</label>
                <input
                  type="text"
                  name="city"
                  id="city"
                  class="border-neutral-300 border-2"
                  placeholder="Enter city"
                />
              </div>
              <div id="state-div">
                <label for="state">State</label>
                <input
                  type="text"
                  name="state"
                  id="state"
                  class="border-neutral-300 border-2"
                  placeholder="Enter state"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
