<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <header>
        <%- include('../partials/navbar.ejs') %>
    </header>
    <section>
        <h3>Live Auctions</h3>
        <div class=" col-span-4  grid grid-cols-3 gap-4" id="cardContainer">
        <% liveauctionData.forEach(auction=>{ %>
       <div class="card min-w-0 max-w-md">
        <div class="max-w-sm rounded overflow-hidden shadow-lg">
            <img class="h-1/3" src="<%= auction.image %>" alt="Headphones">
            <div class="px-6 py-4">
              <div class="font-bold text-xl mb-1"><%= auction.title %></div>
              <p class="text-gray-700 text-base">
                <b>Description:</b> <br><%= auction.description %>
              </p>
            </div>
            <div class="px-6 pt-4 pb-3">
              <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"><%= auction.starting_time %></span>
              <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"><%= auction.ending_time %></span>
              <br>
              <br>  
              <br><br>   
              <a href="/auction_details/<%= auction.id%>" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Details</a>
            </div>
          </div>
       </div>
       <% }) %>
    </div>
    <h3>Upcoming Auctions</h3>
    <div class=" col-span-4  grid grid-cols-3 gap-4" id="cardContainer">
      
        <% incomingAuctionDetails.forEach(auction=>{ %>
       <div class="card min-w-0 max-w-md">
        <div class="max-w-sm rounded overflow-hidden shadow-lg">
            <img class="h-1/3" src="<%= auction.image %>" alt="Headphones">
            <div class="px-6 py-4">
              <div class="font-bold text-xl mb-1"><%= auction.title %></div>
              <p class="text-gray-700 text-base">
                <b>Description:</b> <br><%= auction.description %>
              </p>
            </div>
            <div class="px-6 pt-4 pb-3">
              <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"><%= auction.starting_time %></span>
              <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"><%= auction.ending_time %></span>
              <br>
              <br>  
              <br><br>   
              <a href="/auction_details/<%= auction.id%>" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Details</a>
            </div>
          </div>
       </div>
       <% }) %>
    </div>
    </section>
</body>
</html>